<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoTicketing.Resources.MisTemas.TemaOriginal">

    
   
    <Style x:Key="Color_Shell" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="Grey"/>
        <Setter Property="Title"/>
        
    </Style>
    <Style x:Key="Fondo" TargetType="Page">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Title"/>

    </Style>


    <Style x:Key="RadioButton" TargetType="RadioButton">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontFamily" />
    </Style>
    <Color x:Key="Color_fondoTitulo">Blue</Color>
    <Color x:Key="Color_Fuente">Black</Color>
    <Color x:Key="ColorpestanaNavegacion">Blue</Color>
    <Color x:Key="ColorBorder2">white</Color>
    <Color x:Key="ColorBorder1">#6cc3f5</Color>


    <Style x:Key="Pickers" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="#6cc3f5" />
        <Setter Property="TextColor" Value="Blue" />
        <Setter Property="TitleColor" Value="Blue" />
        <Setter Property="FontFamily" />
    </Style>

    <Style x:Key="Botones" TargetType="Button">
        <Setter Property="BackgroundColor" Value="LightBlue" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontFamily" />
        
    </Style>

    <Style x:Key="Label" TargetType="Label">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontFamily" />
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="Entry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="LightBlue" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="LabelBotonesPersonajes" TargetType="Label">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontFamily" />
    </Style>
    

</ResourceDictionary>